<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleMAUI.Maui.Views.Pages.LanguagePage"
             Title="LanguagePage">
    <Grid>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
            <ImageButton Source="english.png" WidthRequest="50" HeightRequest="50" Margin="10" x:Name="English" Clicked="en_Clicked"/>
            <ImageButton Source="hungarian.png" WidthRequest="50" HeightRequest="50" Margin="10" x:Name="Hungarian" Clicked="hu_Clicked"/>
        </StackLayout>
    </Grid>
</ContentPage>